<div class="container">
  <h3 class="title-padding-bottom text-center">Sign In</h3>
  <form class="col-md-8 mx-auto" method="POST">
    <div class="form-group">
      <input type="text" name="name" class="form-control input-lg" placeholder="Name" value="{{name}}">
    </div>
    <div class="form-group">
      <input type="email" name="email" class="form-control input-lg" placeholder="Email" value="{{email}}">
    </div>
    <div class="form-group">
      <input type="password" name="password" class="form-control input-lg" placeholder="Password" value="{{password}}">
    </div>
    <div class="form-group">
      <input type="password" name="confirmPassword" class="form-control input-lg" placeholder="Confirm Password">
    </div>
    <div class="form-group submitBtn">
      <button class="btn btn-primary btn-block">Sign In</button>
    </div>
    <div class="hr-or">
      <span class="hr-title">OR</span>
    </div>
    <div class="row text-center">
      <div class="col-md-4 col-sm-12 socialBtn">
        <a href="/auth/google" class="btn btn-block btn-lg btn-google">
          <i class="fab fa-google-plus-square"></i>&nbsp;&nbsp;Google+</a>
      </div>
      <div class="col-md-4 col-sm-12 socialBtn">
        <a href="/auth/twitter" class="btn btn-block btn-lg btn-twitter">
          <i class="fab fa-twitter-square"></i>&nbsp;&nbsp;Twitter</a>
      </div>
      <div class="col-md-4 col-sm-12 socialBtn">
        <a href="/auth/facebook" class="btn btn-block btn-lg btn-facebook disabled">
          <i class="fab fa-facebook-square"></i>&nbsp;&nbsp;Facebook</a>
      </div>
    </div>
  </form>
</div>